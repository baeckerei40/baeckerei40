<UserControl x:Class="baeckerei40.Produktion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:baeckerei40"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White">
        <Label x:Name="Text" Content="Produktion" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <DataGrid x:Name="dataGridProduktion" ItemsSource="{Binding}" HorizontalAlignment="Left" SelectionChanged="dataGridProduktion_SelectionChanged" Margin="10,25,0,-25"/>
    </Grid>
</UserControl>
